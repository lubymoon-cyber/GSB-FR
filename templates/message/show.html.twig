{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <h1>Message</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ message.etat ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Archives</th>
                <td>{{ message.archive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Objet</th>
                <td>{{ message.objet }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ message.message }}</td>
            </tr>
            <tr>
                <th>MessageDate</th>
                <td>{{ message.dateMessageMessagerie ? message.dateMessageMessagerie|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('message_index') }}">retour</a>
    <a href="{{ path('message_edit', {'id': message.id}) }}">Modification</a>
    {{ include('message/_delete_form.html.twig') }}
    
{% endblock %}